@model IEnumerable<CandyShopAPI.Models.Domain.Dealers>

@{
    ViewData["Title"] = "Index";
}

<h1>Dealers</h1>

<p>
    <a role="button" class="btn btn-success w-18" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a role="button" class="btn btn-primary w-50 mb-2 " asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a role="button" class="btn btn-info w-50 mb-2" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a role="button" class="btn btn-danger w-50 mb-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
